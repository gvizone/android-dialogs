<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAlertDialog"
        android:text="@string/abrir_alertdialog"
        android:onClick="abrirAlertDialog"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnDatePickerDialog"
        android:text="Abrir Date Picker Dialog"
        android:onClick="abrirDatePickerDialog"
        android:layout_below="@+id/btnAlertDialog"/>

</RelativeLayout>
